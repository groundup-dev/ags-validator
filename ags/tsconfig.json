{
  "compilerOptions": {
    "module": "commonjs", // Jest uses CommonJS, so this should be set
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node", // Important for resolving node modules
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"]
}
