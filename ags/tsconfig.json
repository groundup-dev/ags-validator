{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "global.d.ts" // Make sure this is included if you have it
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
